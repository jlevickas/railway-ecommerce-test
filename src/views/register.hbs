<form action="/register" method="post">
  <input
    type="email"
    name="email"
    id="email"
    placeholder="Ingresá tu email"
    required
  />
  <input
    type="password"
    name="password"
    id="password"
    placeholder="Ingresá tu contraseña"
    required
  />
  <button type="submit">Registrarse</button>

  {{#if error}}
    <p>{{error}}</p>
  {{/if}}
</form>

<a href="/login">Iniciar Sesion</a>
